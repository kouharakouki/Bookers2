      <table>
        <tbody>
          <% book.book_comments.each do |book_comment| %>
          <tr>
            <th>
              <%= attachment_image_tag book_comment.user, :profile_image, :fill, 40, 40, fallback: "no_image2.jpg" %><br>
              <%= link_to user_path(book_comment.user.id) do %>
                <%= book_comment.user.name %>
              <% end %>
            </th>
            <th>
              <%= book_comment.comment %>
            </th>
            <th>
              <% if book_comment.user == current_user %>
                <%= link_to "Destroy",book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
              <% end %>
            </th>
          </tr>
          <% end %>
        </tbody>
      </table>